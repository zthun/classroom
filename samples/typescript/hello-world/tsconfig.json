{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "target": "es5",
    "module": "commonjs"
  },
  "include": ["src/**/*.ts"]
}
